#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define GUI(keycode) &hm_long LGUI keycode
#define CTRL(keycode) &hm_long LCTRL keycode
#define SHIFT(keycode) &hm_short LSHIFT keycode
#define ALT(keycode) &hm LALT keycode

/ {
        
        behaviors {
                hm_long: homerow_mods_long {
                    compatible = "zmk,behavior-hold-tap";
                    label = "homerow mods";
                    #binding-cells = <2>;
                    tapping_term_ms = <400>;
                    flavor = "tap-preferred";
                    bindings = <&kp>, <&kp>;
                };
                hm: homerow_mods_short {
                    compatible = "zmk,behavior-hold-tap";
                    label = "homerow mods";
                    #binding-cells = <2>;
                    tapping_term_ms = <300>;
                    flavor = "tap-preferred";
                    bindings = <&kp>, <&kp>;
                };
                hm_short: homerow_mods_short {
                    compatible = "zmk,behavior-hold-tap";
                    label = "homerow mods";
                    #binding-cells = <2>;
                    tapping_term_ms = <200>;
                    flavor = "tap-preferred";
                    bindings = <&kp>, <&kp>;
                };
        };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// | CPS |  W  |  F  |  P  |  B  |                 |  J  |  L  |  U  |  Y  |     |
// |  A  |  R  |  S  |  T  |  G  |     |     |     |  M  |  N  |  E  |  I  |  O  |  
//       |  X  |  C  |  D  |  V  |     |     |     |  K  |  H  |  Z  |  Q  |   
//             |     | ... | SPC | SYM |     | SYM | RET | BSP | ESC |
                        bindings = <
   &caps_word  &kp W      &kp F      &kp P         &kp B                                   &kp J     &kp L        &kp U      &kp Y      &caps_word  
   &kp CTRL(A) &kp ALT(R) &kp GUI(S) &kp SHIFT(T)  &kp G        &kp LGUI        &kp LGUI   &kp M     &kp SHIFT(N) &kp GUI(E) &kp ALT(I) &kp CTRL(O)
               &kp X      &kp C      &kp D         &kp V        &kp LGUI        &kp LGUI   &kp K     &kp H        &kp Z      &kp Q 
                          &kp LGUI   &kp TAB       &kp SPACE    &kp RET         &kp RET    &kp RET   &kp BSPC     &kp ESC
                        >;
                };
        };
};
